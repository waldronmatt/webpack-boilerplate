{
  "name": "webpack-template",
  "version": "1.2.0",
  "private": true,
  "description": "Webpack 5 template with sensible defaults.",
  "main": "src/js/index.js",
  "scripts": {
    "dev": "webpack serve --env development --config config/webpack.dev.js",
    "prod": "webpack --env production --config config/webpack.prod.js && webpack --env target=server --config config/webpack.server.config.js",
    "serve": "node ./dist/server.js",
    "build": "webpack --env production --config config/webpack.prod.js && webpack --env target=serverless --config config/webpack.server.config.js",
    "lint:js": "eslint --fix .",
    "lint:scss": "stylelint --fix **/*.scss",
    "lint": "yarn lint:js && yarn lint:scss",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waldronmatt/webpack-template.git"
  },
  "author": "Matthew Waldron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/waldronmatt/webpack-template/issues"
  },
  "homepage": "https://github.com/waldronmatt/webpack-template#readme",
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1",
    "pre-push": "yarn lint"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.ts": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "express": "^4.17.2",
    "express-rate-limit": "^6.4.0",
    "express-static-gzip": "^2.1.5",
    "sanitize.css": "^13.0.0",
    "serverless-http": "^3.0.1",
    "the-new-css-reset": "^1.4.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@tsconfig/recommended": "^1.0.1",
    "@waldronmatt/browserslist-config": "^1.1.5",
    "@waldronmatt/eslint-config": "^1.1.6",
    "@waldronmatt/postcss-config": "^1.2.5",
    "@waldronmatt/prettier-config": "^1.2.5",
    "@waldronmatt/semantic-release-config": "^1.0.7",
    "@waldronmatt/stylelint-config": "^1.1.5",
    "@waldronmatt/webpack-config": "^2.7.3",
    "commitizen": "^4.2.4",
    "compression-webpack-plugin": "^9.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-loader": "^2.18.0",
    "eslint": "^8.14.0",
    "eslint-webpack-plugin": "^3.1.1",
    "html-webpack-plugin": "^5.5.0",
    "image-minimizer-webpack-plugin": "^3.2.3",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-webp": "^7.0.0",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.6",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.7.1",
    "stylelint-webpack-plugin": "^3.2.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
