{
  "name": "webpack-template",
  "private": true,
  "description": "Webpack 5 template with sensible defaults.",
  "main": "src/js/index.js",
  "scripts": {
    "bootstrap:ci": "yarn install --frozen-lockfile --ignore-engines",
    "dev": "webpack serve --env development --config config/webpack.dev.js",
    "prod": "webpack --env production --config config/webpack.prod.js && webpack --env target=server --config config/webpack.server.config.js",
    "serve": "node ./dist/server.js",
    "build": "webpack --env production --config config/webpack.prod.js && webpack --env target=serverless --config config/webpack.server.config.js",
    "lint:js": "eslint --fix .",
    "lint:scss": "stylelint --fix **/*.scss",
    "lint": "yarn lint:js && yarn lint:scss",
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest:watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waldronmatt/webpack-template.git"
  },
  "author": "Matthew Waldron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/waldronmatt/webpack-template/issues"
  },
  "homepage": "https://github.com/waldronmatt/webpack-template#readme",
  "dependencies": {
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "express-static-gzip": "^2.1.6",
    "sanitize.css": "^13.0.0",
    "serverless-http": "^3.0.1",
    "the-new-css-reset": "^1.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@waldronmatt/browserslist-config": "^1.2.0",
    "@waldronmatt/commitizen-config": "^1.1.1",
    "@waldronmatt/commitlint-config": "^1.1.3",
    "@waldronmatt/eslint-config": "^1.5.1",
    "@waldronmatt/jest-config": "^1.2.3",
    "@waldronmatt/lint-staged-config": "^1.1.1",
    "@waldronmatt/postcss-config": "^1.4.0",
    "@waldronmatt/prettier-config": "^1.2.6",
    "@waldronmatt/semantic-release-config": "^1.1.1",
    "@waldronmatt/stylelint-config": "^1.2.2",
    "@waldronmatt/tsconfig-config": "^1.1.0",
    "@waldronmatt/webpack-config": "^2.9.3",
    "commitizen": "^4.2.4",
    "compression-webpack-plugin": "^9.2.0",
    "esbuild-loader": "^2.18.0",
    "eslint": "^8.17.0",
    "eslint-webpack-plugin": "^3.1.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "image-minimizer-webpack-plugin": "^3.2.3",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-webp": "^7.0.0",
    "jest": "^28.1.0",
    "lint-staged": "^13.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.8.5",
    "stylelint-webpack-plugin": "^3.2.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
